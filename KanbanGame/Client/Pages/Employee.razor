@page "/employee"
@page "/employee/{id:int}"
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager

@if (Id is null)
{
    <PageTitle>Create a new Employee</PageTitle>
    <h3>Create a new Employee</h3>
}
else
{
    <PageTitle>Edit @employee.Name</PageTitle>
    <h3>Edit @employee.Name <img src="@($"Avatars/{employee.Name}.png")" onerror="@($"this.src='Avatars/Default.png';")" style="height:64px; padding-left: 32px"></h3> @*todo: find better solution for default image*@
}

<EditForm Model="employee" OnSubmit="HandleSubmit">
    <div>
        <label for="name">Name</label>
        <InputText id="name" @bind-Value="employee.Name" class="form-control" />
    </div>
    <div>
        <label for="seniority">Seniority</label>
        <InputSelect id="seniority" @bind-Value="employee.Seniority" class="form-control">
            @foreach (var seniority in Enum.GetValues(typeof(KanbanGame.Shared.Employee.EmployeeSeniority)))
            {
                <option value="@seniority">@seniority</option>
            }
        </InputSelect>
    </div>
    <div>
        <label for="status">Status</label>
        <InputSelect id="status" @bind-Value="employee.Status" class="form-control">
            @foreach (var status in Enum.GetValues(typeof(KanbanGame.Shared.Employee.EmployeeStatus)))
            {
                <option value="@status">@status</option>
            }
        </InputSelect>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">@btnText</button>
    <button type="button" class="btn btn-danger"
            @onclick="DeleteEmployee">
        Delete Employee
    </button>
</EditForm>

@code {
    
    [Parameter]
    public int? Id { get; set; }
    string btnText = string.Empty;
    private HubConnection? hubConnection;

    KanbanGame.Shared.Employee employee =
        new KanbanGame.Shared.Employee{
            Id = 0,
            Name = "Name",
            Seniority = KanbanGame.Shared.Employee.EmployeeSeniority.Junior, 
            Status = KanbanGame.Shared.Employee.EmployeeStatus.Working
        };

    protected override async Task OnInitializedAsync()
    {
        btnText = Id == null ? "Save New Employee" : "Update Emplyee";
        await Connect();
    }
    private async Task Connect()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/employeeHub"))
            .Build();
    
        await hubConnection.StartAsync();
    }
    protected override async Task OnParametersSetAsync()
    {
        if (Id is not null)
        {
            var result = await EmployeeService.GetEmployeeById((int)Id);
            if (result is not null)
                employee = result;
            else
                NavigationManager.NavigateTo("/employee");
        }
    }

    async Task HandleSubmit()
    {
        if (Id is null)
        {
            await EmployeeService.CreateEmployee(employee);
        }
        else
        {
            await EmployeeService.UpdateEmployee((int)Id, employee);
        }
        if(hubConnection is not null)
        {
            await hubConnection.SendAsync("UpdateEmployeeList", 0);
        }
    }

    async Task DeleteEmployee()
    {
        await EmployeeService.DeleteEmployee(employee.Id);
        if(hubConnection is not null)
        {
            await hubConnection.SendAsync("UpdateEmployeeList", 0);
        }
    }
}